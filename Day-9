from art import logo1

bids = {}
check = True
while check:
    name = input("What is your name? ")
    price = int(input("How much you bid? $"))  # Convert input to integer
    bids[name] = price
    ask = input("Does anyone else want to bid? If yes, then type 'yes', if no then type 'no'\n")
    if ask == "no":
        check = False

def highest_bid(bid_dict):
    highest = 0
    winner = ""
    for bidder, bid_amount in bid_dict.items():
        bid_amount = int(bid_amount)  # Ensure bid_amount is an integer
        if bid_amount > highest:
            highest = bid_amount
            winner = bidder
    print(f"The winner is {winner} with a bid of ${highest}")

highest_bid(bids)

